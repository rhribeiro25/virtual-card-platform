	"item": [
		{
			"name": "Create Card",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"const response = pm.response.json();\r",
							"const id = response.id;\r",
							"pm.collectionVariables.set('cardId', id);"
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"cardholderName\": \"Renan Ribeiro\",\n  \"initialBalance\": \"100.00\"\n}"
				},
				"url": {
					"raw": "{{host}}/cards",
					"host": [
						"{{host}}"
					],
					"path": [
						"cards"
					]
				}
			},
			"response": []
		},
		{
			"name": "Spend from Card",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"amount\": 10\n}"
				},
				"url": {
					"raw": "{{host}}/cards/{{cardId}}/spend",
					"host": [
						"{{host}}"
					],
					"path": [
						"cards",
						"{{cardId}}",
						"spend"
					]
				}
			},
			"response": []
		},
		{
			"name": "Topup Card",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"amount\": 1\n}"
				},
				"url": {
					"raw": "{{host}}/cards/{{cardId}}/topup",
					"host": [
						"{{host}}"
					],
					"path": [
						"cards",
						"{{cardId}}",
						"topup"
					]
				}
			},
			"response": []
		},
		{
			"name": "Get Card Details",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{host}}/cards/{{cardId}}",
					"host": [
						"{{host}}"
					],
					"path": [
						"cards",
						"{{cardId}}"
					]
				}
			},
			"response": []
		},
		{
			"name": "Get Transactions History",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{host}}/cards/{{cardId}}/transactions?page=0&size=3",
					"host": [
						"{{host}}"
					],
					"path": [
						"cards",
						"{{cardId}}",
						"transactions"
					],
					"query": [
						{
							"key": "page",
							"value": "0"
						},
						{
							"key": "size",
							"value": "3"
						}
					]
				}
			},
			"response": []
		}
	],
	"variable": [
		{
			"key": "cardId",
			"value": ""
		},
